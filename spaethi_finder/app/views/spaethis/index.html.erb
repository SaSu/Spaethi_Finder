<%= form_tag spaethis_path , :method => 'get' do %>
    <p>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Search", :name => nil %>
    </p>
<% end %>
<table>
  <tr>
    <th>Name</th>
    <th>Strasse</th>
    <th>Hausnummer</th>
    <th>Plz</th>
    <th>Stadt</th>
    <th>Bezirk</th>
    <th>Sonstiges</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @spaethis.each do |spaethi| %>
  <tr>
    <td><%= spaethi.name %></td>
    <td><%= spaethi.strasse %></td>
    <td><%= spaethi.hausnummer %></td>
    <td><%= spaethi.plz %></td>
    <td><%= spaethi.stadt %></td>
    <td><%= spaethi.bezirk %></td>
    <td><%= spaethi.sonstiges %></td>
    <td><%= link_to 'Show' , spaethi %></td>
    <td><%= link_to 'Edit', edit_spaethi_path(spaethi) %></td>
    <td><%= link_to 'Destroy', spaethi, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>


